@model IEnumerable<COMP3851B.Models.Announcements>

@{
    ViewData["Title"] = "Announcements";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .announcement {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            position: relative;
        }

            .announcement h2 {
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .announcement p {
                margin-bottom: 5px;
            }

            .announcement .publish-date {
                font-size: 0.9rem;
                color: #555;
            }

            .announcement .last-update,
            .announcement .publisher {
                font-size: 0.8rem;
                color: #777;
                position: absolute;
                right: 20px;
            }

            .announcement .last-update {
                top: 10px;
            }

            .announcement .publisher {
                top: 30px;
            }

        .divider {
            margin: 20px 0;
            border-top: 1px solid #ccc;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Announcements</h1>
        @if (Model != null && Model.Any())
        {
            foreach (var announcement in Model.OrderByDescending(a => a.LastUpdateDate))
            {
                <div class="announcement">
                    <h2>@announcement.Title</h2>
                    <p class="publish-date"> @announcement.PublishDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    <p>@announcement.Content</p>
                    <p class="last-update"><strong>Last Update Date:</strong> @announcement.LastUpdateDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    <p class="publisher"><strong>Publisher:</strong> @announcement.Publisher</p>
                </div>
                <div class="divider"></div>
            }
        }
        else
        {
            <p>No announcements available.</p>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
