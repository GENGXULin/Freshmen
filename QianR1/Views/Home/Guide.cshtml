@model COMP3851B.Models.User
@{
    ViewData["Title"] = "Getting Started to Apply for a Student Card";
}

<link rel="stylesheet" type="text/css" href="~/css/Guide.css">

<div class="apply-student-card-page">
    <div class="header-section">
        <div class="overlay">
            <h1>Getting Started to Apply for a Student Card?</h1>
        </div>
    </div>
    <div class="content-section">
        <div class="image-container">
            <img src="~/images/photo_guide 1.png" alt="Photo Guidelines" class="image-full">
            <img src="~/images/image 40.png" alt="Student Card Examples" class="image-original">
        </div>
        <div class="upload-photo-section">
            <h2>Upload Your Photo</h2>
            <p>If you have any trouble uploading your photo, we can help. Call Student Central on 1300 ASK UON (+61 2 4921 5000).</p>
            <table>
                @if (Model.IsAdmin==false)
                {
                    <tr>
                        <td>First Name</td>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <td>Last Name</td>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <td>Email Address</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Student Number</td>
                        <td>@Model.StudentNumber</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>First Name</td>
                        <td>-</td>
                    </tr>
                    <tr>
                        <td>Last Name</td>
                        <td>-</td>
                    </tr>
                    <tr>
                        <td>Email Address</td>
                        <td>-</td>
                    </tr>
                    <tr>
                        <td>Student Number</td>
                        <td>-</td>
                    </tr>
                
                }



                <tr>
                    <td>Pick Up Location <span class="required">*</span></td>
                    <td>
                        <select>
                            <option value="">--</option>
                            <option value="location1">Location 1</option>
                            <option value="location2">Location 2</option>
                            <option value="location3">Location 3</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Upload Photo <span class="required">*</span></td>
                    <td>
                        <input type="file" name="uploadPhoto" />
                    </td>
                </tr>
            </table>
            <button type="submit">Submit</button>
            <div class="notice">
                Choose "<span class="highlight">Singapore Students</span>" for your pick up location.
                You will receive an email from school site when it is ready!
            </div>
        </div>
    </div>
</div>
