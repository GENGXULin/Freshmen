<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COMP3851B</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/COMP3851B.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg ">
            <div class="container-fluid">
                <!-- This makes the navbar full width -->
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/images/ico.png" alt="University of Newcastle, Australia" height="60"> <!-- Increased height -->
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">FRESHMEN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Tour")">UNI LIFE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DocumentsNeeded", "Home")">Document Need</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Announcement", "Home")">Announcement</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("location", "Home")">Location</a>
                        </li>
                    </ul>
                </div>

                <div class="search"><input type="text" placeholder="Search..."><button>🔍</button></div>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Profile", "Account")">
                            <img src="~/images/user/default.png" alt="Profile" class="rounded-circle" height="40">
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="banner">
        <img src="~/images/justIco.png" alt="University Logo" class="logo">
        <div class="text">
            <p>University of<br>Newcastle<br>@@Freshmen Website</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $(window).scroll(function () {
                if ($(this).scrollTop() > 50) {
                    $('.navbar').addClass('scrolled');
                } else {
                    $('.navbar').removeClass('scrolled');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
