@model IEnumerable<COMP3851B.Models.Announcements>

@{
    ViewData["Title"] = "Manage Announcements";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Manage Announcements</h1>
        <a class="btn btn-primary" asp-action="CreateAnnouncement">Create New Announcement</a>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Publish Date</th>
                    <th>Last Update Date</th>
                    <th>Publisher</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var announcement in Model)
                {
                    <tr>
                        <td>@announcement.Title</td>
                        <td>@announcement.PublishDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@announcement.LastUpdateDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@announcement.Publisher</td>
                        <td>
                            <a class="btn btn-secondary btn-sm" asp-action="EditAnnouncement" asp-route-id="@announcement.Id">Edit</a>
                            <form asp-action="DeleteAnnouncement" asp-route-id="@announcement.Id" method="post" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
