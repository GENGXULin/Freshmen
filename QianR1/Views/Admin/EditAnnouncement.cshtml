@model COMP3851B.Models.Announcements

@{
    ViewData["Title"] = "Edit Announcement";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Edit Announcement</h1>
        <form asp-action="EditAnnouncement" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PublishDate" />
                <input type="hidden" asp-for="LastUpdateDate" />
                <label for="Title">Title</label>
                <input type="text" class="form-control" asp-for="Title" required>
            </div>
            <div class="form-group">
                <label for="Content">Content</label>
                <textarea class="form-control" asp-for="Content" required></textarea>
            </div>
            <div class="form-group">
                <label for="Publisher">Publisher</label>
                <input type="text" class="form-control" asp-for="Publisher" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
