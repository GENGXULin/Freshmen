@model IEnumerable<COMP3851B.Models.User>

<!DOCTYPE html>
<html>
<head>
    <title>User Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #fff;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .permission-box {
            border: 1px solid #ddd;
            padding: 10px;
            display: inline-block;
            text-align: center;
            cursor: pointer;
            margin-bottom: 20px;
            transition: transform 0.2s;
        }

            .permission-box:hover {
                transform: scale(1.05);
            }

            .permission-box img {
                max-width: 100px;
                margin-bottom: 10px;
            }

            .permission-box p {
                margin: 0;
                font-weight: bold;
            }

        .delete-button {
            color: red;
            cursor: pointer;
            text-decoration: underline;
        }

        .btn {
            padding: 5px 10px;
            border: none;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            border-radius: 4px;
            margin: 2px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .action-buttons {
            display: flex;
            justify-content: space-around;
        }
    </style>
</head>
<body>
    <div class="permission-box" onclick="location.href='@Url.Action("UserManagement", "Admin")'">
        <img src="~/images/admin/user.jpg" alt="Permission 2">
        <p>User Management</p>
    </div>

    <h2>Admin Users</h2>
    <a href="@Url.Action("Register", "User")">Creat New Account</a>
    <table>
        <tr>
            <th>UserID</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Name</th>
        </tr>
        @foreach (var user in Model.Where(u => u.IsAdmin))
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName @user.LastName</td>
            </tr>
        }
    </table>

    <h2>Regular Users</h2>
    <table>
        <tr>
            <th>UserID</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach (var user in Model.Where(u => !u.IsAdmin))
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName @user.LastName</td>

                <td class="action-buttons">
                    <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <form asp-action="MakeAdmin" asp-route-id="@user.UserId" method="post">
                        <button type="submit" class="btn btn-primary">Make Admin</button>
                    </form>
                </td>
            </tr>
        }
    </table>

    @Html.AntiForgeryToken()
</body>
</html>
