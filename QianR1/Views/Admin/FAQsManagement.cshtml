@model IEnumerable<COMP3851B.Models.FAQs>

@{
    ViewBag.Title = "FAQs Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FAQs Management</h2>

<p>
    <a asp-action="CreateFAQ" class="btn btn-primary">Create New FAQ</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var faq in Model)
        {
            <tr>
                <td>@faq.Id</td>
                <td>@faq.Question</td>
                <td>@faq.Answer</td>
                <td>
                    <a asp-action="EditFAQ" asp-route-id="@faq.Id" class="action-link">Edit</a>
                    <form asp-action="DeleteFAQ" asp-route-id="@faq.Id" method="post" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <button type="submit" class="action-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
