    body {
        margin: 0;
        font-family: 'Roboto', sans-serif;
        background-color: #f0f0f0;
        color: #333;
    }

    .nav-bg {
        height: 80px; /* 确保与导航栏高度一致 */
        background-color: #f0f0f0; /* 你可以根据需要设置背景颜色 */
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: -1; /* 确保在其他内容之上，但低于导航栏 */
    }


    #tour-container {
        width: 80%;
        max-width: 1200px;
        margin: 40px auto;
        background-color: #ffffff;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        margin-top:120px;
        
    }

    #tour-info {
        width: 100%;
        padding: 30px 20px;
        background-color: #007bff;
        color: #ffffff;
        text-align: center;
        border-bottom: 1px solid #0056b3;
    }

        #tour-info h2 {
            margin: 0;
            font-size: 2em;
        }

        #tour-info p {
            margin: 10px 0 0;
            font-size: 1.2em;
        }

    #tour-viewer-wrapper {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 aspect ratio */
        background-color: #000;
    }

    #tour-viewer {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

        #tour-viewer img {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

            #tour-viewer img.active {
                opacity: 1;
            }

    .hotspot {
        position: absolute;
        width: 50px; /* 调整宽度 */
        height: 50px; /* 调整高度 */
        background-image: url('/images/tour/IMG.png'); /* 替换为实际箭头图标路径 */
        background-size: contain;
        background-repeat: no-repeat;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

        .hotspot:hover {
            transform: scale(1.2);
            filter: brightness(1.2);
        }

        .hotspot:active {
            transform: scale(1.1);
            filter: brightness(0.8);
        }

        .hotspot.up {
            transform: rotate(0deg);
        }

        .hotspot.down {
            transform: rotate(180deg);
        }

        .hotspot.right {
            transform: rotate(90deg);
        }

        .hotspot.left {
            transform: rotate(270deg);
        }

        .hotspot.up-right {
            transform: rotate(45deg);
        }

        .hotspot.up-left {
            transform: rotate(-45deg);
        }

        .hotspot.down-right {
            transform: rotate(135deg);
        }

        .hotspot.down-left {
            transform: rotate(-135deg);
        }


</style>

