@model web.Models.Cart

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<h3>Shipping Address</h3>
@if (ViewBag.DefaultAddress != null)
{
    <p>
        @ViewBag.DefaultAddress.Recipient<br />
        @ViewBag.DefaultAddress.Street<br />
        @ViewBag.DefaultAddress.City, @ViewBag.DefaultAddress.State @ViewBag.DefaultAddress.PostCode
    </p>
}
else
{
    <p>No default address found. Please add an address.</p>
}

<h3>Order Summary</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Price)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Total</th>
            <th>@Model.CartItems.Sum(i => i.Quantity * i.Price).ToString("C")</th>
        </tr>
    </tfoot>
</table>

<form asp-action="CompletePurchase" method="post">
    <button type="submit" class="btn btn-primary">Complete Purchase</button>
</form>
