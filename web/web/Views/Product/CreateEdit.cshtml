@model web.Models.Product

@{
    ViewData["Title"] = "Create/Edit";
}

<div class="text-center">
    <h1 class="display-4">Create or Edit the Inventory</h1>
</div>

<form asp-action="CreateEdit" asp-controller="Product" method="post">
    <input hidden class="form-control" type="number" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Name" class="mt-4">Product name</label>
        <input class="form-control" type="text" asp-for="Name" placeholder="Add a product name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author" class="mt-4">Author</label>
        <input class="form-control" type="text" asp-for="Author" placeholder="Add an author" required />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="mt-4">Description</label>
        <input class="form-control" type="text" asp-for="Description" placeholder="Add a description" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="mt-4">Genre</label>
        <select class="form-control" asp-for="Genre" asp-items="ViewBag.Genres"></select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="subGenre" class="mt-4">SubGenre</label>
        <select class="form-control" asp-for="subGenre" asp-items="ViewBag.SubGenres"></select>
        <span asp-validation-for="subGenre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="mt-4">Price</label>
        <input class="form-control" type="number" asp-for="Price" placeholder="Add a price" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="mt-4">Quantity</label>
        <input class="form-control" type="number" asp-for="Quantity" placeholder="Add a quantity" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Published" class="mt-4">Published Date</label>
        <input class="form-control" type="date" asp-for="Published" />
        <span asp-validation-for="Published" class="text-danger"></span>
    </div>

    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
