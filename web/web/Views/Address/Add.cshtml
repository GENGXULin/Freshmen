@model web.Models.Address

<h1>Add Address</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Street">Street:</label>
        <input asp-for="Street" class="form-control" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="State">State:</label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PostCode">Postal Code:</label>
        <input asp-for="PostCode" class="form-control" />
        <span asp-validation-for="PostCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Recipient">Recipient:</label>
        <input asp-for="Recipient" class="form-control" />
        <span asp-validation-for="Recipient" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="UserName" value="@User.Identity.Name" />


    <button type="submit" class="btn btn-primary">Add Address</button>
</form>
